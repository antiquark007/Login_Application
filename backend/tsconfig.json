{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "prisma/**/*.prisma"],
  "exclude": ["node_modules", "dist"]
}